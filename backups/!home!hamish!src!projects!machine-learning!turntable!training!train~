#!/usr/bin/env python

import numpy as np

def cost(y, h, lmbda, theta1, theta2):
    m = len(y)
    return (
        1.0/m * np.sum( -y * np.log(h) - (1 - y) * np.log(1-h) ) +
        float(lmbda)/(2*m) *  (np.sum(theta1[1:,:] ** 2) + np.sum(theta2[1:,:] ** 2))
    )

